@top Command { expression }
@detectDelim

expression { space? CommandName? space (FlagAndParameter)+ (space Output)? space?}

FlagAndParameter { Flag space Parameter space  }

Parameter { Argument | String }

Output { Argument }

@tokens {
  CommandName { "ffmpeg" }

  Flag { "-" "-"? $[a-zA-Z:_]+ }

  Argument { ![-"\t\n\r ]![\\/*?"<>| \t\n\r]* }

  String { '"' (!["\\] | "\\" _)* '"' }

  space { $[ \t\n\r]+ }
}
